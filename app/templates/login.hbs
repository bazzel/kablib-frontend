<div class='container'>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3'>
      <div class="panel panel-default">
        <div class="panel-heading">
          {{input value=search class='form-control' placeholder='Search' id='search'}}
        </div>
        <div class="panel-body">
          <div class="list-group">
            {{#each filteredContent}}
            <a hef='javascript://' class='list-group-item' {{action 'login' this}}>
              <h4 class='list-group-item-heading'>{{gravatar-image email=email size='46'}} {{fullName}}</h4>
            </a>
            {{else}}
            {{#if  search}}
              <p class='text-muted'>No '{{search}}' here...</p>
            {{else}}
              <p class='text-muted'>Oops, no users yet, so not much to do...</p>
            {{/if}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
